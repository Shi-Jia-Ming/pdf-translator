{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pdf-translator",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://118.26.36.198:31188/*", "http://47.121.201.169:39770/*"]
      },
      "window": {
        "all": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      }
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 800,
        "width": 1000,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "title": "pdf-translator"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cn.edu.hit.pdf-translator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
